<views:BaseView
    x:Class="Physics.Shared.Views.SelfStudy.SelfStudyView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:Physics.Shared.Views.SelfStudy"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:views="using:Physics.Shared.Views"
    xmlns:winui="using:Microsoft.UI.Xaml.Controls"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    mc:Ignorable="d">

    <SplitView
        DisplayMode="Inline"
        IsPaneOpen="True"
        OpenPaneLength="296">
        <SplitView.Pane>
            <winui:TreeView ItemsSource="" />
        </SplitView.Pane>

        <Grid>
            <ContentControl Content="{Binding Model.CurrentContent}" />
        </Grid>
    </SplitView>
</views:BaseView>
