<UserControl
    x:Class="Physics.SelfStudy.Editor.Editors.KnowledgeCheckEditor"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:Physics.SelfStudy.Editor.Editors"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="300"
    d:DesignWidth="400"
    mc:Ignorable="d">

    <StackPanel>
        <TextBox Header="Question" Text="{x:Bind ViewModel.Question, Mode=TwoWay}" />
        <TextBox Header="Correct response" Text="{x:Bind ViewModel.CorrectResponse, Mode=TwoWay}" />
        <ListView Header="Options" ItemsSource="{x:Bind ViewModel.Options, Mode=OneWay}" />
        <StackPanel Orientation="Horizontal">
            <TextBox
                Width="200"
                Header="New option"
                Text="{x:Bind NewItemText, Mode=TwoWay}" />
            <Button VerticalAlignment="Bottom" Click="{x:Bind AddItem}">Add</Button>
        </StackPanel>
        <Button>Delete selected</Button>

    </StackPanel>
</UserControl>
