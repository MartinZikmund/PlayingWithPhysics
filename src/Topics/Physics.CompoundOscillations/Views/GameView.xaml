							<Grid.RowDefinitions>
								<RowDefinition Height="Auto" />
								<RowDefinition Height="Auto" />
							</Grid.RowDefinitions>
							<Button
                                Width="80"
                                Height="80"
                                Margin="0,0,0,8"
