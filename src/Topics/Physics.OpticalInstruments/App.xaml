<local:PhysicsApp
    x:Class="Physics.OpticalInstruments.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Physics.OpticalInstruments"
    xmlns:selfstudy="using:Physics.SelfStudy.Resources"
	RequestedTheme="Light">
	
	<local:PhysicsApp.Resources>
		<ResourceDictionary>
			<ResourceDictionary.MergedDictionaries>
				<XamlControlsResources xmlns="using:Microsoft.UI.Xaml.Controls" />
				<ResourceDictionary Source="ms-appx:///Physics.Shared.UI/Resources/DefaultResources.xaml" />
				<selfstudy:SelfStudyResources />
			</ResourceDictionary.MergedDictionaries>
			<Color x:Key="AppThemeColor">#004DAF</Color>
			<Color x:Key="DarkAppThemeColor">#002B61</Color>
			<Color x:Key="AppTitleBarColor">#002B61</Color>
		</ResourceDictionary>
	</local:PhysicsApp.Resources>

</local:PhysicsApp>
